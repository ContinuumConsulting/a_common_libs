<% defaults = Redmine::Plugin::registered_plugins[:a_common_libs].settings[:default] %>
<% settings = Setting.plugin_a_common_libs %>

<% if settings['enable_bootstrap_lib'].nil? ? defaults['enable_bootstrap_lib'] : settings['enable_bootstrap_lib'] %>
  <%= stylesheet_link_tag 'bootstrap.min.css', :plugin => :a_common_libs %>
  <%= javascript_include_tag 'bootstrap.min.js', :plugin => :a_common_libs %>
  <%= javascript_include_tag 'bootstrap.modal.ext.js', :plugin => :a_common_libs %>
<% end %>

<% if settings['enable_highcharts_lib'].nil? ? defaults['enable_highcharts_lib'] : settings['enable_highcharts_lib'] %>
  <%= javascript_include_tag 'highcharts.js', :plugin => :a_common_libs %>
<% end %>

<% if settings['enable_select2_lib'].nil? ? defaults['enable_select2_lib'] : settings['enable_select2_lib'] %>
  <%= javascript_include_tag 'select2', :plugin => :a_common_libs %>
  <%= stylesheet_link_tag :select2, :plugin => :a_common_libs %>
  <%= javascript_include_tag :a_common_libs, :plugin => :a_common_libs %>
<% end %>

