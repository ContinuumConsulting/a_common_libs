<%# enable_modals_lib = @settings['enable_modals_lib'] || defaults['enable_modals_lib'] %>



<table cellspacing="15">
  <tr>
    <td><%=l(:settings_enable_select2_lib)%>: </td>
    <td><%=check_box_tag 'settings[enable_select2_lib]', true, enable_select2_lib %></td>
  </tr>

  <tr>
    <td><%=l(:settings_enable_highcharts_lib)%>: </td>
    <td><%=check_box_tag 'settings[enable_highcharts_lib]', true, enable_highcharts_lib %></td>
  </tr>

  <tr>
    <td><%=l(:settings_enable_bootstrap_lib)%>: </td>
    <td><%=check_box_tag 'settings[enable_bootstrap_lib]', true, enable_bootstrap_lib %></td>
  </tr>
