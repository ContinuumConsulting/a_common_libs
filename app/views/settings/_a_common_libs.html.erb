<% defaults = Redmine::Plugin::registered_plugins[:a_common_libs].settings[:default] %>
<% enable_select2_lib = @settings['enable_select2_lib'] || defaults['enable_select2_lib'] %>
<% enable_highcharts_lib = @settings['enable_highcharts_lib'] || defaults['enable_highcharts_lib'] %>
